{
    "manifest_version": 3,
    "name": "REGMIO",
    "description": "Register accounts without having to repeat yourself!",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "./icons/regmio-placeholder.png",
            "32": "./icons/regmio-placeholder.png",
            "48": "./icons/regmio-placeholder.png",
            "128": "./icons/regmio-placeholder.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "https://accounts.regmio-placeholder.com/signup/v2/*", 
            "https://www.facebook.com/reg/", 
            "https://www.instagram.com/accounts/emailsignup/", 
            "https://www.amazon.com/ap/register?*",
            "https://www.reddit.com/reddits/login/",
            "https://www.linkedin.com/signup/*",
            "https://en.wikipedia.org/w/*"
        ],
        "js": ["Content.js"]
    }],
    "icons": {
        "16": "./icons/regmio-placeholder.png",
        "32": "./icons/regmio-placeholder.png",
        "48": "./icons/regmio-placeholder.png",
        "128": "./icons/regmio-placeholder.png"
    },
    "permissions": ["storage"]
}